.button
  z-index 9
  position fixed
  bottom 16px
  left 16px
  display grid
  --padding-horizonal-button 16px
  svg
    grid-area 1 / 1 / 2 / 2
    transition opacity 0.3s
    width 24px
    height 24px
  /:root[data-theme='light'] &
    svg:first-child
      opacity 0
  /:root[data-theme='dark'] &
    svg:last-child
      opacity 0
