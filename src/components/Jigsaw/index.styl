@import 'nanarinostyl/src/lib/variable/*'

#jigsawview
  position relative
  margin 0 auto
  .jigsaw
    overflow hidden
    position absolute
    transition 0.4s
    z-index 2
    &:last-of-type
      z-index 1
      clip-path inset(1px 1px)
      img
        animation ani 6s ease-in-out infinite alternate
    img
      width 100%
      height 100%
  &:active > .jigsaw:last-of-type
    background-color rgb(var(--primary-5))

@keyframes ani
  0%
    filter blur(0)
    opacity 0.3
  50%
    filter blur(5px)
    opacity 0.7
  100%
    filter blur(0)
    opacity 0.3
